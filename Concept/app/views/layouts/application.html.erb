<!DOCTYPE html>
<html>
  <head>
    <title>Concept</title>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <%if flash.any?%>
      <%if flash[:notice] != nil %>
        <div class="flex justify-center">
          <div class="h-12 w-96 m-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 flex justify-center rounded-md relative">
            <div class="flex">
              <div class="py-1 inline self-center">
                <svg class="fill-current text-green-500 h-6 w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="inline">
                <p id="notice">
                  <%= flash[:notice] %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <%end%>
      <%if flash[:error] != nil %>
        <div class="flex justify-center">
          <div class="h-12 w-96 m-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 flex justify-center rounded-md relative">
            <div class="flex">
              <div class="py-1 inline self-center">
                <svg class="fill-current text-red-500 h-6 w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="inline">
                <p id="notice">
                  <%= flash[:error] %>
                </p>
              </div>
            </div>
          </div>
        </div>  
      <%end%>
    <%end%>
    <%= yield %>
  </body>
</html>
