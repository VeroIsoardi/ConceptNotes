<div class="flex flex-col justify-between h-screen bg-white max-w-xs p-4">
	<ul class="flex flex-col w-full">
		<li class="my-px">
			<div class="h-12 px-4 rounded-lg text-gray-600 bg-gray-100 flex justify-start">
        <div class="mt-1">
          <img src="<%= asset_path('avatar.png') %>" class="rounded-full w-10 h-10"/>
        </div>
        <div>
          <h4 class="font-semibold text-lg text-gray-700 capitalize tracking-wide mt-3 ml-2">
            <%= current_user.username %>
          </h4>
        </div>
			</div>
		</li>
				<li class="my-px">
					<span class="flex font-medium text-sm text-gray-400 px-4 my-4 uppercase">Notebooks</span>
				</li>
        <% @list.each do |book| %>
				<li class="my-px">
					<a href="#" class="flex flex-row items-center h-12 px-4 rounded-lg text-gray-600 hover:bg-gray-100">
						<span class="flex items-center justify-center text-lg text-gray-400">
              <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
  							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"  d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
							</svg>
            </span>
						<span class="ml-3"><%= book.title%></span>
					</a>
				</li>
        <%end%>
				<li class="my-px">
          <div class="flex flex-row items-center h-12 px-4 rounded-lg text-gray-600 hover:bg-gray-100">
						<span class="flex items-center justify-center text-lg text-green-400">
							<svg fill="none"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								viewBox="0 0 24 24"
								stroke="currentColor"
								class="h-6 w-6">
								<path d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</span>
            <%= link_to 'Add new', new_book_path, class: 'ml-3'%>
					</div>
				</li>
				<li class="my-px">
					<span class="flex font-medium text-sm text-gray-400 px-4 my-4 uppercase">Account</span>
				</li>
				<li class="my-px">
					<div class="flex flex-row items-center h-12 px-4 rounded-lg text-gray-600 hover:bg-gray-100">
						<span class="flex items-center justify-center text-lg text-gray-400">
							<svg fill="none" stroke-linecap="round" stroke-linejoin="round"
								stroke-width="2"
								viewBox="0 0 24 24"
								stroke="currentColor"
								class="h-6 w-6">
								<path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
							</svg>
						</span>
            <span class="ml-3"><%= link_to "Profile", edit_user_path(current_user.id) %></span>
          </div>
				</li>
				<li class="my-px">
					<div class="flex flex-row items-center h-12 px-4 rounded-lg text-gray-600 hover:bg-gray-100">
						<span class="flex items-center justify-center text-lg text-red-400">
							<svg fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
								viewBox="0 0 24 24"
								stroke="currentColor"
								class="h-6 w-6">
								<path d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"></path>
							</svg>
						</span>
            <span><%= link_to "Logout", :logout, method: :post, class: 'ml-3' %></span>
					</div>
				</li>
			</ul>
		</div>
	</div>